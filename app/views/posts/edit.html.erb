<div class="main_container">
  <div class="information">
    <h2><% unless flash[:notice_failure] %>スケジュール編集<% end %></h2>
    
    <% if flash[:notice_failure] %>
      <p class="notice notice_failure"><%= flash[:notice_failure] %></p>
    <% end %>
  </div>
    
  <%= render "shared/error", obj: @post %>

  <%= form_with model: @post do |f| %>
    <table>
      <tr>
        <th><%= f.label :title, "タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th><%= f.label :start_at, "開始日" %></th>
        <td><%= f.date_field :start_at %></td>
      </tr>
      <tr>
        <th><%= f.label :end_at, "終了日" %></th>
        <td><%= f.date_field :end_at %></td>
      </tr>
      <tr>
        <th><%= f.label :is_all_day, "終日" %></th>
        <td><%= f.check_box :is_all_day %><br><%= f.label :is_all_day, "終日の場合はチェックを入れます" %></td>
      </tr>
      <tr>
        <th><%= f.label :memo, "スケジュールメモ" %></th>
        <td><%= f.text_area :memo, class: "posts-content" %></td>
      </tr>
    </table>

    <div>
      <ul>
        <li><%= f.submit "スケジュールの編集を完了する"%></li>
        <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
      </ul>
    </div>
  <% end %>
</div>
